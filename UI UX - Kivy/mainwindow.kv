<Button>:
    font_size: 32

<GridLayout>:
    id: calculatrice
    display: entry
    rows: 5

    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False

    BoxLayout:
        Button:
            text: "7"
            on_press: calculatrice.clearError(self.text)
            on_press: entry.text += self.text
        Button:
            text: "8"
            on_press: calculatrice.clearError(self.text)
            on_press: entry.text += self.text
        Button:
            text: "9"
            on_press: calculatrice.clearError(self.text)
            on_press: entry.text += self.text
        Button:
            text: "+"
            on_press: calculatrice.clearError(self.text)
            on_press: entry.text += self.text

    BoxLayout:
        Button:
            text: "4"
            on_press: calculatrice.clearError(self.text)
            on_press: entry.text += self.text
        Button:
            text: "5"
            on_press: calculatrice.clearError(self.text)
            on_press: entry.text += self.text
        Button:
            text: "6"
            on_press: calculatrice.clearError(self.text)
            on_press: entry.text += self.text
        Button:
            text: "-"
            on_press: calculatrice.clearError(self.text)
            on_press: entry.text += self.text

    BoxLayout:
        Button:
            text: "1"
            on_press: calculatrice.clearError(self.text)
            on_press: entry.text += self.text
        Button:
            text: "2"
            on_press: calculatrice.clearError(self.text)
            on_press: entry.text += self.text
        Button:
            text: "3"
            on_press: calculatrice.clearError(self.text)
            on_press: entry.text += self.text
        Button:
            text: "*"
            on_press: calculatrice.clearError(self.text)
            on_press: entry.text += self.text

    BoxLayout:
        Button:
            text: "AC"
            on_press: calculatrice.clearError(self.text)
            on_press: entry.text = ""
        Button:
            text: "0"
            on_press: calculatrice.clearError(self.text)
            on_press: entry.text += self.text
        Button:
            text: "="
            on_press: calculatrice.calculer(entry.text)
        Button:
            text: "/"
            on_press: calculatrice.clearError(self.text)
            on_press: entry.text += self.text